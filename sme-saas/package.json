{
  "name": "sme-saas-monorepo",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/reporting",
    "apps/rt",
    "packages/*"
  ],
  "scripts": {
    "dev": "cd apps/web && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "build:web": "node scripts/build-web.cjs",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc -b",
    "dev:reporting": "python apps/reporting/src/main.py",
    "serve:reporting": "uvicorn src.main:app --reload --port 8001 --app-dir apps/reporting",
    "docker:reporting": "docker build -t sme-reporting ./apps/reporting && docker run -p 8001:8001 --env-file .env sme-reporting",
    "dev:rt": "go run apps/rt/main.go",
    "ci": "npm run lint && npm run typecheck && npm test",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "seed:apply": "node scripts/seed-apply.cjs"
  },
  "devDependencies": {
    "@types/node": "20.11.30",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.8.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "10.4.19",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.3",
    "postcss": "8.4.38",
    "tailwindcss": "3.4.3",
    "typescript": "5.4.5",
  "vitest": "3.2.4",
  "@playwright/test": "1.46.1",
  "pg": "8.12.0"
  }
}
